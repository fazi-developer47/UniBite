<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>UniBite Admin</title>

    <!-- Fonts -->
    <link href="~/adminlib/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/adminlib/assets/css/sb-admin-2.css" rel="stylesheet">
    <link href="~/adminlib/assets/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    



    <!-- SB Admin 2 CSS -->
    <link href="~/adminlib/assets/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- ================= SIDEBAR ================= -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center"
               asp-controller="Admin" asp-action="Index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-utensils"></i>
                </div>
                <div class="sidebar-brand-text mx-3">UniBite Admin</div>
            </a>

            <hr class="sidebar-divider my-0">

            <!-- Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <hr class="sidebar-divider">

            <div class="sidebar-heading">
                Addons
            </div>

            <!-- Tables -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse"
                   data-target="#collapseTables">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Tables</span>
                </a>
                <div id="collapseTables" class="collapse" data-parent="#accordionSidebar">
                                    <!--User Manage-->
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">User Management</h6>
                        <a class="collapse-item" asp-controller="User" asp-action="Index">Users</a>
                        <div class="dropdown-divider"></div>
                        <a class="collapse-item" asp-controller="Role" asp-action="Index">User Roles</a>
                         <!--Other Tables-->
                        <h6 class="collapse-header">Others Tables</h6>
                        <a class="collapse-item" asp-controller="MenuItem" asp-action="Index">Menu Items</a>
                        <div class="dropdown-divider"></div>
                        <a class="collapse-item" asp-controller="Order" asp-action="Index">Orders</a>
                        <div class="dropdown-divider"></div>
                        <a class="collapse-item" asp-controller="Feedback" asp-action="Index">Feebacks</a>
                    </div>
                </div>
            </li>

            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggle -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

            <!-- Sidebar Message -->
            <div class="sidebar-card d-none d-lg-flex">
                <img class="sidebar-card-illustration mb-2"
                     src="~/adminlib/assets/img/undraw_rocket.svg">
                <p class="text-center mb-2">
                    <strong>SB Admin Pro</strong> is packed with premium features.
                </p>
                <a class="btn btn-success btn-sm"
                   href="https://startbootstrap.com/theme/sb-admin-pro">
                    Upgrade to Pro
                </a>
            </div>

        </ul>
        <!-- =============== END SIDEBAR =============== -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- ================= TOPBAR ================= -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <form asp-controller="Admin" asp-action="Search" method="post"
                          class="d-none d-sm-inline-block form-inline mr-auto ml-md-3">
                        <div class="input-group">
                            <input type="text" name="query" class="form-control bg-light border-0 small"
                                   placeholder="Search for..." required>
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>



                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Alerts -->
                        <li class="nav-item dropdown no-arrow mx-1">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown">
                                <i class="fas fa-bell fa-fw"></i>
                                <span class="badge badge-danger badge-counter">3+</span>
                            </a>
                        </li>

                        <!-- Messages -->
                        <li class="nav-item dropdown no-arrow mx-1">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown">
                                <i class="fas fa-envelope fa-fw"></i>
                                <span class="badge badge-danger badge-counter">7</span>
                            </a>
                        </li>

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- User -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">
                                    @User.Identity.Name (Admin)
                                </span>
                                <img class="img-profile rounded-circle"
                                     src="~/adminlib/assets/img/undraw_profile.svg">
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in">
                                <a class="dropdown-item text-center" asp-controller="Admin" asp-action="Details">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profile
                                </a>
                                <div class="dropdown-divider"></div>
                                <form asp-controller="Admin" asp-action="Logout" method="post" class="dropdown-item p-0">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link dropdown-item text-left">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Logout
                                    </button>
                                </form>
                            </div>

                        </li>

                    </ul>

                </nav>
                <!-- =============== END TOPBAR =============== -->
                <!-- Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>

            </div>
            <!-- End Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; UniBite 2026</span>
                    </div>
                </div>
            </footer>

        </div>
        <!-- End Content Wrapper -->

    </div>
    <!-- End Page Wrapper -->
    <!-- Scroll Top -->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- JS -->
    <script src="~/adminlib/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/adminlib/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminlib/assets/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/adminlib/assets/vendor/chart.js/Chart.min.js"></script>
    <script src="~/adminlib/assets/js/sb-admin-2.min.js"></script>
    <script src="~/adminlib/assets/js/demo/chart-area-demo.js"></script>
    <script src="~/adminlib/assets/js/demo/chart-pie-demo.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
