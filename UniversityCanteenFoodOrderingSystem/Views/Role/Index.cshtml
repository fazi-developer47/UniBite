@{
}
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

<h2>Roles</h2>
<a class="btn btn-primary mb-2" href="/Role/Create">Add New</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Role Id</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/Role/Details/@role.Id">Details</a>
                    <a class="btn btn-warning btn-sm" href="/Role/Edit/@role.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Role/Delete/@role.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    @* Alert on Role *@
    @if (TempData["Message"] != null)
    {
        <script>
            Swal.fire({
                toast: true,
                position: "top-end",
                icon: "success",
                title: "@TempData["Message"]",
                showConfirmButton: false,
                timer: 3000
            });
        </script>
    }
    else if (TempData["Error"] != null)
    {
        <script>
            Swal.fire({
                position: "top-end",
                icon: "error",
                title: "@TempData["Error"]",
                showConfirmButton: true
            });
        </script>
    }
}