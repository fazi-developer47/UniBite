@model UniversityCanteenFoodOrderingSystem.Areas.Identity.Data.AppUser
@{
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<div class="alert alert-danger mt-3">
    <strong>Are you sure you want to delete this user?</strong>
</div>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">User Type</dt>
            <dd class="col-sm-9">@Model.UserType</dd>

            <dt class="col-sm-3">Registered On</dt>
            <dd class="col-sm-9">@Model.RegisteredOn.ToString("dd-MMM-yyyy")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
