@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!-- Hero Banner -->
<section class="bg-primary text-white text-center py-5" style="background:url('/images/hero-food.jpg') center/cover no-repeat;">
    <div class="container">
        <h1 class="display-4 fw-bold">Join UniBite 🍴</h1>
        <p class="lead">Create your account and start ordering delicious meals instantly</p>
    </div>
</section>

<!-- Register Card -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h2 class="text-center fw-bold mb-4 text-primary">Register for UniBite</h2>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- Full Name -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.FullName" class="form-control" autocomplete="name" aria-required="true" placeholder="Enter your full name" />
                            <label asp-for="Input.FullName">Full Name</label>
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Phone Number -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" placeholder="03xxxxxxxxx" />
                            <label asp-for="Input.PhoneNumber" class="control-label"></label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>


                        <!-- Password -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control passwordInput" id="" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>

                            <!-- Eye icon inside the input field -->
                            <i id="toggleIcon" onclick="togglePassword()"
                               class="bi bi-eye-fill"
                               style="position:absolute; right:10px; top:50%; transform:translateY(-50%); cursor:pointer; font-size:1.2rem;"></i>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" id="" class="form-control passwordInput" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Submit -->
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-warning fw-bold">
                            <i class="bi bi-person-plus"></i> Register
                        </button>
                    </form>

                    <!-- Links -->
                    <div class="mt-3 text-center">
                        <p>Already have an account? <a asp-page="./Login" class="fw-bold text-primary text-decoration-none">Log in here</a></p>
                    </div>
                </div>
            </div>

            <!-- External Register -->
            <div class="text-center mt-4">
                <h5 class="fw-bold">Or sign up with</h5>
                <hr />
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <p class="text-muted">No external login providers configured.</p>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-dark mx-2" name="provider" value="@provider.Name">
                                    <i class="bi bi-box-arrow-in-right"></i> @provider.DisplayName
                                </button>
                            }
                        </form>
                    }
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @* Password Toggle *@
    <script>
        function togglePassword() {
            // Select all inputs with class 'passwordInput'
            var inputs = document.querySelectorAll(".passwordInput");
            var icon = document.getElementById("toggleIcon");

            inputs.forEach(function (input) {
                if (input.type === "password") {
                    input.type = "text";
                    icon.classList.remove("bi-eye-fill");
                    icon.classList.add("bi-eye-slash-fill");
                } else {
                    input.type = "password";
                    icon.classList.remove("bi-eye-slash-fill");
                    icon.classList.add("bi-eye-fill");
                }
            });
        }
    </script>

}

